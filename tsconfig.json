{
  "compilerOptions": {
    // 允许编译器编译 JavaScript 文件
    "allowJs": false,
    // 跳过对声明文件的类型检查
    "skipLibCheck": true,
    // 简化导入语句的生成，以允许将 CommonJS 模块导入为默认导出
    "esModuleInterop": true,
    // 允许从没有默认导出的模块中导入默认导出
    "allowSyntheticDefaultImports": true,
    // 启用所有严格类型检查选项
    "strict": true,
    // 确保文件名的一致性，以避免在导入时发生错误
    "forceConsistentCasingInFileNames": true,
    // 禁止在 switch 语句中落空的情况
    "noFallthroughCasesInSwitch": true,
    // 指定模块生成的规范。使用 ES 模块规范
    "module": "esnext",
    // 指定模块解析策略为 Node.js 的模块解析策略
    "moduleResolution": "node",
    // 允许导入 JSON 模块
    "resolveJsonModule": true,
    // 将每个文件作为单独的模块处理，以提高构建速度
    "isolatedModules": true,
    // 不生成编译后的输出文件
    "noEmit": true,
    // 指定 JSX 的转换方式。使用 React 的 JSX 转换
    "jsx": "react-jsx",
    // 指定所有相对导入的基本路径
    "baseUrl": "src",
    // 生成源映射文件，以便在调试时可以追踪到原始 TypeScript 代码
    "sourceMap": true,
    // 指定编译后的 JavaScript 文件的输出目录
    "outDir": "build",
    // 不报告未使用的局部变量错误
    "noUnusedLocals": false,
    // 允许隐式的 any 类型
    "noImplicitAny": false,
    // 启用实验性的装饰器语法支持
    "experimentalDecorators": true
  },
  // 指定参与编译的目录
  "include": ["src"],
  // 指定过滤检查
  "exclude": ["node_modules", "build"]
}
